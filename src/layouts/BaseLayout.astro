---
import { AstroSeo } from "@astrolib/seo";
import "../styles/global.css";
import Github from "../components/icons/Github.astro";
import Gitlab from "../components/icons/Gitlab.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import Instagram from "../components/icons/Instagram.astro";
import Spotify from "../components/icons/Spotify.astro";

const { current } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Author: Diego Jaime" />
		<title>Diego</title>
	</head>
	<body class="dark">
		<AstroSeo
			title="Desarrollador web y móvil | Diego JM"
			description="Ingeniero en sistemas computacionales con 4+ años de experiencia en desarrollo web, móvil y múltiples sectores industriales"
			canonical="https://diegojmjmz.netlify.app/"
			openGraph={{
				type: "website",
				url: "https://diegojmjmz.netlify.app/",
				title: "Desarrollador web y móvil | Diego JM",
				description:
					"Ingeniero en sistemas computacionales especializado en desarrollo web y móvil",
				images: [
					{
						url: "https://diegojmjmz.netlify.app/images/og-image.jpg", // Añade una imagen OG
						width: 1200,
						height: 630,
						alt: "Diego JM - Desarrollador",
					},
				],
			}}
			additionalMetaTags={[
				{
					name: "keywords",
					content:
						"desarrollador web, desarrollador móvil, ingeniero sistemas, JavaScript, Angular, Node.js, México",
				},
				{
					name: "author",
					content: "Diego JM",
				},
				{
					name: "viewport",
					content: "width=device-width, initial-scale=1.0",
				},
			]}
		/>
		<header class="dark">
			<nav class="navbar">
				<div class="navbar-color">
					<button title="theme" class="color-btn dark"></button>
				</div>
				<a class="navbar-menu">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="512"
						height="512"
						viewBox="0 0 512 512"
					>
						<line
							x1="80"
							y1="160"
							x2="432"
							y2="160"
							style="fill:none;stroke-linecap:round;stroke-miterlimit:10;stroke-width:32px"
						></line>
						<line
							x1="80"
							y1="256"
							x2="432"
							y2="256"
							style="fill:none;stroke-linecap:round;stroke-miterlimit:10;stroke-width:32px"
						></line>
						<line
							x1="80"
							y1="352"
							x2="432"
							y2="352"
							style="fill:none;stroke-linecap:round;stroke-miterlimit:10;stroke-width:32px"
						></line>
					</svg>
				</a>
				<ul class="navbar-nav">
					<li class="nav-item">
						<a href="/" class={current === "start" ? "nav-link active" : "nav-link"}
							>inicio</a
						>
					</li>
					<li class="nav-item">
						<a href="/blog/" class={current === "blog" ? "nav-link active" : "nav-link"}
							>Blog</a
						>
					</li>
					<li class="nav-item">
						<a href="/cv" class={current === "cv" ? "nav-link active" : "nav-link"}
							>CV</a
						>
					</li>
				</ul>
			</nav>
		</header>
		<main class="dark">
			<slot />
		</main>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Diego JM",
				"jobTitle": "Ingeniero en Sistemas Computacionales",
				"url": "https://diegojmjmz.netlify.app/",
				"sameAs": ["https://www.linkedin.com/in/djaimej/", "https://github.com/djaimej"]
			}
		</script>
		<script>
			import "../scripts/index";
		</script>
		<footer class="dark">
			<b class="txt-center">Diego Jaime Jiménez</b>
			<p class="txt-center">Ingeniero en sistemas</p>
			<p class="txt-center">
				<a class="dark" href="mailto:d.jaimej@hotmail.com">d.jaimej&#64;hotmail.com</a
				>&nbsp;|&nbsp;<a class="dark" href="tel:+525548767882">5548767882</a>
			</p>
			<div class="icons dark">
				<a
					href="https://gitlab.com/djaimej"
					target="_blank"
					rel="noopener"
					aria-label="gitlab"
				>
					<Gitlab />
				</a>
				<a
					href="https://github.com/djaimej"
					target="_blank"
					rel="noopener"
					aria-label="github"
				>
					<Github />
				</a>
				<a
					href="https://www.linkedin.com/in/djaimej/"
					target="_blank"
					rel="noopener"
					aria-label="linkedin"
				>
					<Linkedin />
				</a>
				<a
					href="https://open.spotify.com/user/d.jaimej"
					target="_blank"
					rel="noopener"
					aria-label="spotify"
				>
					<Spotify />
				</a>
			</div>
		</footer>
	</body>
</html>
